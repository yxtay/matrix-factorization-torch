{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices", "group:allNonMajor"],
  "packageRules": [
    {
      "automerge": true,
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "automerge": false,
      "groupName": "python",
      "matchPackageNames": ["python"],
      "matchUpdateTypes": ["minor"]
    }
  ]
}
